# Dashi Environment Variables - Example
# Copy this file to .env.local and replace placeholder values with actual configuration

# Runtime environment
NODE_ENV=development

# Database connection
DATABASE_URL=postgresql://user:password@localhost:5432/dashi

# Authentication (Auth.js / NextAuth)
NEXTAUTH_SECRET=your-secret-key-at-least-32-chars
NEXTAUTH_URL=http://localhost:3000

# Email service
RESEND_API_KEY=re_example_api_key_replace_with_actual_key
EMAIL_FROM=orders@dashi.com

# SMTP configuration for Nodemailer (Alternative to Resend)
# Common providers:
# Gmail: smtp.gmail.com:587 (TLS) or smtp.gmail.com:465 (SSL)
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587
# Custom SMTP: your-smtp-server.com:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Initial admin user (for setup)
DEFAULT_ADMIN_EMAIL=admin@dashi.com
DEFAULT_ADMIN_PASSWORD=secure-admin-password

# SMS notification service (Textbelt)
TEXTBELT_API_KEY=your-textbelt-api-key

# Public facing application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Internationalization settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr