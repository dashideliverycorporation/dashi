# Dashi Environment Variables - Example
# Copy this file to .env.local and replace placeholder values with actual configuration

# Runtime environment
NODE_ENV=development

# Database connection
DATABASE_URL=postgresql://user:password@localhost:5432/dashi

# Authentication (Auth.js / NextAuth)
NEXTAUTH_SECRET=your-secret-key-at-least-32-chars
NEXTAUTH_URL=http://localhost:3000

# Email service
RESEND_API_KEY=re_example_api_key_replace_with_actual_key
EMAIL_FROM=orders@dashi.com

# Initial admin user (for setup)
DEFAULT_ADMIN_EMAIL=admin@dashi.com
DEFAULT_ADMIN_PASSWORD=secure-admin-password

# Public facing application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Internationalization settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr